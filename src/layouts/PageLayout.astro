---
import Blob from '../components/UI/Blob.astro';
import '../sass/global.scss';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/images/logos/LW.G.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='body' id='body'>
		<div id='overflow-protector'>
			<!-- CHILDREN RENDER HERE -->
			<slot />
			<Blob />
		</div>
	</body>
</html>

<style lang='scss'>
	body {
		// overflow-x: hidden;
	}
	#overflow-protector {
		overflow-x: hidden;
		position: relative;
		margin: 0 auto;
	}
</style>
