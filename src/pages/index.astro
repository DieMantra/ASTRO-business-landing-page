---
import Navigation from '../components/Navigation.astro';

import SubscribedOverlay from '../screens/Home/CallToActionSection/EmailSubscribeOverlay.astro';

import PageLayout from '../layouts/PageLayout.astro';
import CallToActionSection from '../screens/Home/CallToActionSection/index.astro';
import ClientReviewsSection from '../screens/Home/ClientReviewsSection/index.astro';
import Footer from '../screens/Home/Footer/index.astro';
import HeroSection from '../screens/Home/HeroSection/HeroSection.astro';
import LatestNewsSection from '../screens/Home/LatestNewsSection/index.astro';
import OptionDescriptionSection from '../screens/Home/OptionDescriptionSection/index.astro';
import OurFeaturesSection from '../screens/Home/OurFeaturesSection/index.astro';

const PAGE_TITLE = 'LW.G | Statistic About Your Business';
---

<!-- landing page -->
<PageLayout title={PAGE_TITLE}>
